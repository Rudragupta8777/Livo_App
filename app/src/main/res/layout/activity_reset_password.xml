<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/resetMainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/screen_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Reset Password"
                android:textSize="28sp"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Enter the code sent to your email"
                android:textColor="@color/on_boarding_description" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/otpContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp">

                <LinearLayout
                    android:id="@+id/llOtpBoxes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView android:id="@+id/otpBox1" style="@style/OtpBoxStyle" />
                    <Space android:layout_width="8dp" android:layout_height="wrap_content" />
                    <TextView android:id="@+id/otpBox2" style="@style/OtpBoxStyle" />
                    <Space android:layout_width="8dp" android:layout_height="wrap_content" />
                    <TextView android:id="@+id/otpBox3" style="@style/OtpBoxStyle" />
                    <Space android:layout_width="8dp" android:layout_height="wrap_content" />
                    <TextView android:id="@+id/otpBox4" style="@style/OtpBoxStyle" />
                    <Space android:layout_width="8dp" android:layout_height="wrap_content" />
                    <TextView android:id="@+id/otpBox5" style="@style/OtpBoxStyle" />
                    <Space android:layout_width="8dp" android:layout_height="wrap_content" />
                    <TextView android:id="@+id/otpBox6" style="@style/OtpBoxStyle" />
                </LinearLayout>

                <EditText
                    android:id="@+id/etHiddenOtp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@null"
                    android:cursorVisible="false"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textColor="@android:color/transparent"
                    app:layout_constraintBottom_toBottomOf="@+id/llOtpBoxes"
                    app:layout_constraintTop_toTopOf="@+id/llOtpBoxes" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:id="@+id/flDynamicContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">

                <FrameLayout
                    android:id="@+id/timerLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ProgressBar
                        android:id="@+id/pbTimer"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_gravity="center"
                        android:max="100"
                        android:progress="100"
                        android:progressDrawable="@drawable/circular_progress" />

                    <TextView
                        android:id="@+id/tvTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="00:45"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tvResendBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Resend Code"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:background="?attr/selectableItemBackground"
                    android:padding="12dp"/>
            </FrameLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPass"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:hint="New Password"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeColor="@color/text_input_stroke"
                app:startIconDrawable="@android:drawable/ic_lock_lock"
                app:startIconTint="@color/text_primary"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/text_primary"
                app:hintTextColor="@color/text_primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilConfirmPass"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Confirm Password"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeColor="@color/text_input_stroke"
                app:startIconDrawable="@android:drawable/ic_lock_lock"
                app:startIconTint="@color/text_primary"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/text_primary"
                app:hintTextColor="@color/text_primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etConfirmPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReset"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:text="Reset Password"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="@color/text_primary"
                app:cornerRadius="12dp" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progressTint="@color/text_primary"
                android:layout_marginTop="16dp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/successContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/screen_background"
        android:alpha="0">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieSuccess"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="150dp"
            app:lottie_rawRes="@raw/lock"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSuccessTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Password Changed!"
            android:textSize="24sp"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lottieSuccess" />

        <TextView
            android:id="@+id/tvSuccessMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Please login with your new password."
            android:textColor="@color/on_boarding_description"
            android:textSize="16sp"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSuccessTitle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackToLogin"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_margin="32dp"
            android:alpha="0"
            android:backgroundTint="@color/text_primary"
            android:text="Back to Login"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSuccessMsg" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/errorOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:alpha="0"
        android:clickable="true"
        android:focusable="true">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="16dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@android:drawable/ic_dialog_alert"
                    app:tint="#FF5252" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Limit Exceeded"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"/>

                <TextView
                    android:id="@+id/tvErrorPopupMsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Too many attempts.\nPlease try again later."
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#666666"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>

</FrameLayout>