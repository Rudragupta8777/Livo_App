<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/screen_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_splash</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Livo</item>
    </style>

    <style name="Base.Theme.Livo" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

    <style name="OtpBoxStyle">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:background">@drawable/bg_otp_box_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#1A000000</item>
    </style>

    <style name="MaterialCalendar" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/text_primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="buttonBarPositiveButtonStyle">@style/Widget.Material3.Button.TextButton.Dialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Material3.Button.TextButton.Dialog</item>
    </style>

    <style name="Theme.Livo" parent="Base.Theme.Livo" />
</resources>